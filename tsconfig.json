{
  "compilerOptions": {
    "strict": true,
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["vite/client"],
    "importsNotUsedAsValues": "error",
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@lib/*": ["./src/lib/*"],
      "@X/*": ["./src/features/X/*"]
    }
  }
}
